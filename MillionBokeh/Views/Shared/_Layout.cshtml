<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    <link href="~/Content/component.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Libre+Baskerville|Lobster" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Rozha+One" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/tether.min.css" rel="stylesheet" />
    <link href="~/Content/hover-min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")

    <script src="http://maps.google.com/maps/api/js?sensor=false&key=AIzaSyDA7Y2vuJQ-ZAqbRCYkNY7bvvhW9nCVGrM" type="text/javascript"></script>

    <script src="~/Scripts/wow.min.js"></script>
    <script src="~/Scripts/tether.min.js"></script>
    <script src="~/Scripts/tether.min.js"></script>

    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/starrr.js"></script>


    @if ((MillionBokeh.Models.Utilities.IsUserAdmin(User)))
    {
        <style>
            .cmsdisplay {
                cursor: pointer;
            }
        </style>
    }

</head>
<body>

    <script>
        new WOW().init();
    </script>
    <div class="navbar navbar-toggleable-md navbar-inverse wow fadeInDown black-nav">
        @Html.Partial("Navbar")
    </div>
    <div class="body-content">
        @RenderBody()

    </div>
    <footer class="mt-5 footer">
        <section class="section section--menu" id="Hvoratio">
            <nav class="menu menu--horatio">
                <ul class="menu__list">
                    <li class="menu__item"><a class="menu__link" href="/">Home</a></li>
                    <li class="menu__item @(ViewBag.CurrentMenu == "products" ? "menu__item--current" : "")"><a class="menu__link" href="/products/">MBPA Store</a></li>
                    <li class="menu__item @(ViewBag.CurrentMenu == "events" ? "menu__item--current" : "")"><a class="menu__link" href="/events/">Events</a></li>
                    <li class="menu__item @(ViewBag.CurrentMenu == "findphotographer" ? "menu__item--current" : "")"><a class="menu__link" href="/members/index?findphotographer=true">Find a Photographer</a></li>
                    <li class="menu__item @(ViewBag.CurrentMenu == "members" ? "menu__item--current" : "")"><a class="menu__link" href="/members/">For Members</a></li>
                </ul>

            </nav>
        </section>
        <p class="copyright">© 2017 MBPA - Million Bokeh Photographers' Association</p>
    </footer>


    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)



    <script>

        $(".open-search").click(function () {
            $(".overlay").css("height", "100%");
        });

        $(".closebtn").click(function () {
            $(".overlay").css("height", "0%");
        });

        $(".thumbnail").click(function () {
            $(".overlay").css("height", "100%");
            $(".overlay").find("img").attr("src", $(this).data("full-photo-src"))

        });

    </script>
</body>
</html>
